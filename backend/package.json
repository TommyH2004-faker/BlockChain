{
  "name": "blockchain-certificate-backend",
  "version": "1.0.0",
  "description": "Backend for blockchain certificate system",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "clean": "rmdir /s /q dist 2>nul & rmdir /s /q artifacts 2>nul & rmdir /s /q cache 2>nul & del /q scripts\\*.js scripts\\*.js.map 2>nul",
    "compile": "npx hardhat compile",
    "deploy:sepolia": "npx hardhat run scripts/deploy-sepolia.js --network sepolia",
    "deploy:local": "npx hardhat run scripts/deploy-certificate.mjs --network localhost",
    "verify": "npx hardhat verify --network sepolia"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/typeorm": "^11.0.0",
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.8.0",
    "ethers": "^5.7.2",
    "multer": "^2.0.2",
    "mysql2": "^3.15.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "hardhat": "^2.22.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}